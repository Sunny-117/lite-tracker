{
  "name": "fee-app",
  "script": "./dist/app.js",
  "cwd": "./",
  "watch": [
    "dist"
  ],
  "ignore_watch": [
    "node_modules",
    "log"
  ],
  "watch_options": {
    "followSymlinks": true
  },
  "error_file": "./log/pm2/app/app-err.log",
  "out_file": "./log/pm2/app/app-out.log",
  "env": {
    "NODE_ENV": "development"
  },
  "env_production": {
    "NODE_ENV": "production"
  },
  "env_testing": {
    "NODE_ENV": "testing"
  }
}